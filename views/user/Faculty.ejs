<%- include("navbar.ejs") %>
<link rel="stylesheet" href="style/Faculty.css" />
<link rel="stylesheet" href="style/index.css" />

<!-- slide1 begins  -->
<div class="container-fluid">
  <div class="row">
    <div class="col-md-12 header"></div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-12 slide1">
      <img
        src="uploads/careers-banner.jpg"
        alt=""
        style="border: 5px solid white"
      />
    </div>
  </div>
</div>

<!-- slide2 begins -->
<div class="container mt-3 mb-5">
  <div class="row">
    <div class="col-md-12 school">
      <h2>Faculty Members</h2>
      <div class="line mb-4"></div>
    </div>
    <div class="col-md-12 mt-5">
      <div class="row">
        <% for (var i=0;i<faculty_detail.length;i++)
        {
    %>
    
        <div class="col-md-3 mb-4">
          <div class="box">
            <img
              src="/images/<%=faculty_detail[i].faculty_photo%>"
              class="card-img-top"
              alt="..."
            />
            <div class="text-center pt-2">
              <h3><%= faculty_detail[i].faculty_name %></h3>
              <h5>Teacher</h5>
              <p><%= faculty_detail[i].faculty_Designation %></p>
            </div>
          </div>
        </div>

        <% } %>
      </div>
    </div>
  </div>
</div>

<%- include("footer.ejs") %>
