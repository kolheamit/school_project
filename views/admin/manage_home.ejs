<%- include("Navbar.ejs") %>

<form
  action="/admin/save_home_details"
  method="post"
  enctype="multipart/form-data"
>
  <div class="container">
    <div class="row">
      <div class="col-md-12 bg-secondary shadow">
        <h1 class="text-white">MANAGE HOME</h1>
      </div>
      <div class="col-md-4 mt-4">
        <label for=""> Founder Image</label>
        <input type="file" name="founder_img" class="form-control" />
      </div>
      <div class="col-md-2 mt-4">
        <img
          src="/images/<%=home_data[0].founder_image%>"
          alt=""
          width="100px"
        />
      </div>
      <div class="col-md-4 mt-4">
        <label for=""> Founder Message</label>

        <textarea
          type="text"
          name="founder_msg"
          class="form-control"
          rows="5"
          cols="10"
        >
<%=home_data[0].founder_text%></textarea
        >
      </div>
    </div>
    <div class="col-md-12 mt-5 text-center">
      <button class="btn btn-primary">Save</button>
    </div>
  </div>
</form>

<hr />

