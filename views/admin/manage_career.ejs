<%- include("Navbar.ejs") %>

<form
  action="/admin/save_career_detail"
  method="post"
  enctype="multipart/form-data"
>
  <div class="container">
    <div class="row">
      <div class="col-md-12 bg-secondary shadow">
        <h1 class="text-white">MANAGE CAREER</h1>
      </div>
      <div class="col-md-4 mt-3">
        <label for=""> Teacher</label>
        <input
          type="file"
          name="pdf_1"
          class="form-control"
          value="/images/<%=career_data[0].pdf_1%>"
        />
      </div>
      <div class="col-md-4 mt-3">
        <label for=""> Primary School</label>
        <input
          type="file"
          name="pdf_2"
          class="form-control"
          value="/images/<%=career_data[0].pdf_2%>"
        />
      </div>

      <div class="col-md-4 mt-3">
        <label for=""> Middle School</label>
        <input
          type="file"
          name="pdf_3"
          class="form-control"
          value="/images/<%=career_data[0].pdf_3%>"
        />
      </div>
      <div class="col-md-4 mt-3">
        <label for=""> High School</label>
        <input
          type="file"
          name="pdf_4"
          class="form-control"
          value="/images/<%=career_data[0].pdf_4%>"
        />
      </div>
      <div class="col-md-4 mt-3">
        <label for=""> Non Teaching Staff</label>
        <input
          type="file"
          name="pdf_5"
          class="form-control"
          value="/images/<%=career_data[0].pdf_5%>"
        />
      </div>
    </div>
    <div class="col-md-12 mt-3 text-center">
      <button class="btn btn-primary">Save</button>
    </div>
  </div>
</form>

<hr />

